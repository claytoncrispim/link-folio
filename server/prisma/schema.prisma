generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  links     Link[] // A user can have a list of links.
}

model Link {
  id        String   @id @default(uuid())
  url       String   @db.Text
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // The "Relation" fields that create the connection
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String   // This is the "foreign key" - the real column in the DB
}